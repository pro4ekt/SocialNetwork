@model BLL.DTO.UserDTO
@{
    ViewBag.Title = "FindUser";
    Layout = "_ProfileLayout.cshtml";
}

<h2>Find User</h2>
@using (Html.BeginForm("FindUser", "Client", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table>
        <tr>
            <td><p>Users Email</p></td>
            <td><input type="text" name="userToFind" /> </td>
        </tr>
        <tr>
            <td><input type="submit" value="Поиск" /> </td>
            <td></td>
        </tr>
    </table>
}
@if (@Model != null && @Model.Email != null)
{
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Age)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Info)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Info)
        </dd>
        @if(User.IsInRole("admin"))
        {
            <dt>
                @Html.DisplayNameFor(model => model.Role)
            </dt>
            <dd>
                 @Html.DisplayFor(model => model.Role)
            </dd>
        }
    </dl>
    @Html.ActionLink("Add to friends", "AddFriend", "Client",new { friendId = Model.Id},null)
    if(User.IsInRole("admin") && Model.Role != "admin")
    {
        <br/>
        @Html.ActionLink("Delete User","RemoveUser","Client", new {userId = Model.Id} , null)
    }
    <hr />
}
@if (Model == null)
{
    <p>There is no user like this</p>
}

